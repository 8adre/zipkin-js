{
  "name": "zipkin-js",
  "private": true,
  "license": "Apache-2.0",
  "dependencies": {
    "@babel/preset-env": "^7.1.6",
    "lerna": "^2.11.0",
    "yarn": "^1.3.2"
  },
  "scripts": {
    "install:deps": "lerna exec npm install",
    "lint:es": "eslint packages",
    "lint:ts": "tslint -c tslint.json -e \"./packages/**/node_modules/**/*.ts\" packages/**/*.ts",
    "lint": "npm-run-all --parallel lint:*",
    "test:es": "mocha --require babel-register --require babel-polyfill",
    "test:ts": "tsr packages/zipkin/test-types/*.test.ts --noAnnotate --libDeclarations && mocha --opts test/mocha-types.opts",
    "test": "npm-run-all test:*",
    "lerna-clean": "lerna clean",
    "lerna-build": "lerna run build",
    "lerna-publish": "lerna publish --force-publish *",
    "postinstall": "yarn lerna-build --silent"
  },
  "author": "OpenZipkin <openzipkin.alt@gmail.com>",
  "repository": "https://github.com/openzipkin/zipkin-js",
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "7.1.5",
    "@babel/polyfill": "7.0.0",
    "@babel/preset-es2015": "7.0.0-beta.53",
    "@babel/register": "7.0.0",
    "buster": "^0.7.18",
    "chai": "^3.5.0",
    "co": "^4.6.0",
    "co-mocha": "^1.2.1",
    "eslint": "^2.10.0",
    "eslint-config-airbnb": "^9.0.0",
    "eslint-plugin-import": "^1.6.0",
    "eslint-plugin-jsx-a11y": "^1.0.2",
    "eslint-plugin-react": "^5.0.1",
    "lolex": "^1.5.1",
    "mocha": "^3.2.0",
    "npm-run-all": "^4.1.3",
    "sinon": "^1.17.6",
    "ts-runtime": "^0.1.35",
    "tslint": "^5.0.0",
    "typescript": "^2.9.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
